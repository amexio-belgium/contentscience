---
interface Props {
    headline?: string;
    text?: string;
    buttonText?: string;
    visual?: string;
}

const { headline, text, buttonText, visual } = Astro.props;
---
<div class="bg-blue-900 text-white py-20">
    <div class="container mx-auto px-8 md:px-0 text-center">
        { headline && <h1 class="text-4xl md:text-5xl font-semibold">{headline}</h1> }
        { text && <p class="mt-4 text-lg">{text}</p> }
        { buttonText && <a href="#" class="mt-8 inline-block bg-primary hover:bg-orange-600 text-white font-semibold py-3 px-8 rounded">{buttonText}</a> }
    </div>
</div>
