---
import '../../styles/yt-embed.css';
import Link from './Link.astro';

interface Props {
    videoId: string;
    title: string;
    class?: string;
}

const { 
    videoId, 
    title,
    class: className,
} = Astro.props;
---

<lite-youtube class={className} videoid={videoId}  style={`background-image: url('https://i.ytimg.com/vi/${videoId}/hqdefault.jpg');`} >
    <a href={`https://youtube.com/watch?v=${videoId}`} class="lty-playbtn" title="Play Video">
        <span class="lyt-visually-hidden">
            {title}
        </span>     
    </a>
</lite-youtube>


<script src="@lib/yt-embed.js">