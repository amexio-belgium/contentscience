---
interface Props {
    headline: string;
    description: string;
    class?: string;
}
const { 
    headline, 
    description,
    class: className 
} = Astro.props;
---
<div class:list={["inline-flex flex-col items-center justify-center w-full gap-8 px-12 py-6 border-blue-500 shadow backdrop-blur-lg lg:w-1/3 bg-gradient-to-l from-blue-600/70 to-blue-800/70 shadow-blue-200 rounded-2xl border-1", className]}>
    <slot />
    <div class="flex flex-col items-center justify-start gap-4">
        <h4 class="font-serif text-xl text-center text-white" set:html={headline}></h4>
        <p class="text-base text-center text-white" set:html={description}></p>
    </div>
</div>