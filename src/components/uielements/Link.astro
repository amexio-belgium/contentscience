---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  hoverColor?: "yellow" | "orange",
  onWhite?: boolean,
  textLength?: number,
}

const { 
    href, 
    class: className, 
    hoverColor = "orange",
    onWhite,
    textLength = 12,
    ...props 
} = Astro.props;

---
<a href={href} class:list={[
    "bg-clip-text bg-[length:200%_100%] bg-[100%] hover:bg-[0%_100%] motion-reduce:transition-none  text-transparent focus-visible:outline-none focus-visible:rounded focus-visible:ring-2 focus-visible:ring-tertiary",
    hoverColor == "orange" && "transition-all bg-gradient-to-r from-secondary from-0% via-secondary via-50%",
    hoverColor == "yellow" && "transition-all bg-gradient-to-r from-tertiary from-0% via-tertiary via-50%",
    onWhite ? "to-black to-50%" : "to-white to-50%"
    , className ]} 
    style={`transition-duration: ${textLength * 20}ms`}
    {...props}>
    <slot />
</a>
