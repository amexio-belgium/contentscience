---
interface Props {
    headlineTag?: "h2" | "h3" | "h4";
    class?: string;
}

const {
    headlineTag = "h3", 
    class: className
} = Astro.props;

const sizes = {
    h2:
      "text-2xl mt-20 mb-10",
    h3:
      "text-xl mt-10",
    h4:
      "text-lg",
}

const HeadlineTagName = headlineTag;
---
<HeadlineTagName class:list={["not-prose font-serif", sizes[headlineTag], className]}>
    <slot />
</HeadlineTagName>