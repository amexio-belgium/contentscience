---
interface Props {
    headlineTag?: "h2" | "h3" | "h4";
    class?: string;
}

const {
    headlineTag = "h3", 
    class: className
} = Astro.props;

const sizes = {
    h2:
      "text-xl md:text-2xl md:mt-20 mb-4 md:mb-10",
    h3:
      "text-lg md:text-xl mt-4 md:mt-10",
    h4:
      "text-lg",
}

const HeadlineTagName = headlineTag;
---
<HeadlineTagName class:list={["not-prose font-serif", sizes[headlineTag], className]}>
    <slot />
</HeadlineTagName>