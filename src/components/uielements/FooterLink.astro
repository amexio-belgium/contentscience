---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
---

<div class="sm:w-1/3 ">
  <a href={href} class="hover:underline hover:underline-offset-4 hover:decoration-secondary hover:decoration-2 font-serif text-xl md:text-[2rem] font-medium text-white focus-visible:outline-none focus-visible:rounded focus-visible:ring-2 focus-visible:ring-tertiary" {...props}>
      <slot />
  </a>
</div>
