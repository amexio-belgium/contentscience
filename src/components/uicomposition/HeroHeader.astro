---
import LogoSlant from '@components/graphicelements/LogoSlant.astro';
import { useTranslations } from '../../i18n/utils';
import { Image } from 'astro:assets';
import Breadcrumbs  from "@components/uielements/Breadcrumbs.astro";
interface Props {
    headline: string;
    client?: string;
    text?: string;
    buttonText?: string;
    homepage?: boolean;
    backgroundImage?: string;
    backgroundImageAltText?: string;
}

const { 
    headline, 
    text, 
    homepage, 
    backgroundImage,
    client,
    backgroundImageAltText = ''
} = Astro.props;

const { lang } = Astro.params;

const t = useTranslations(lang, 'home');

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/*.{jpeg,jpg,png,gif}');
if (backgroundImage && !images[backgroundImage]) throw new Error(`"${backgroundImage}" does not exist in glob: "src/assets/images/*.{jpeg,jpg,png,gif}"`);
---
<div class:list={[
        "relative pt-10 text-white pb-20 md:pb-32 lg:pb-40", 
        !backgroundImage && "hero-gradient",
        homepage && "md:mb-0",
        backgroundImage && "from-blue-800 to-blue-800/0 from-[33%] from-70% bg-gradient-to-r"
    ]}>
    <Breadcrumbs />

    <div class="text-white mt-8 mb-10">
        {
            client && <p class="uppercase font-serif text-xl" set:html={client}></p>
        }
        <h1 class:list={["font-serif font-bold w-full lg:w-2/3",
            homepage ? "text-2xl md:text-4xl" : " text-3xl "
        ]} 
            set:html={headline}>
        </h1>
    </div>
    <div class:list={["relative ", homepage && "w-full lg:w-1/2"]}>
        <div class:list={[" text-left w-full md:w-[80ch]", homepage && " md:w-full"]}>
            { text && 
                <p class="text-lg font-light md:text-xl" set:html={text}></p> 
            }
            <slot />
        </div>
 
    </div>
    { 
        backgroundImage ? 
            <Image src={images[backgroundImage]()} width={1200} height={700} alt={backgroundImageAltText} 
                class="absolute top-0 -z-10 object-cover h-full w-100vw -right-1/4" 
            />
        :
            <div class:list={
                ["absolute object-cover h-auto opacity-30 lg:opacity-100",
                    homepage ? 
                    "-top-10 lg:-top-20 -z-10 w-[400%] lg:w-full -right-full lg:-right-[40%]"
                        : 
                    "-bottom-1/2 md:-bottom-full lg:top-10 -z-10 w-[400%] md:w-[300%] lg:w-8/12 -right-full lg:-right-[10%]"
                ]}>
                <LogoSlant homepageAnimation={homepage} />
            </div>
    }
</div>