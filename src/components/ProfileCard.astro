---
import Button from './ui/Button.astro';
interface Props {
    profileImg?: string;
    content: string;
    name?: string;
    title?: string;
    color?: "light" | "dark";
    direction?: "right" | "left";
    buttonText?: string;
    class?: string;
    [x: string]: any;
}

const {
    profileImg,
    content,
    name,
    title,
    buttonText = "Book a meeting",
    color = "dark",
    direction = "left",
    block,
    class: className,
    ...rest
} = Astro.props;

const styles = {
    light:
        "bg-white",
    dark:
        "from-blue-600 to-blue-800 shadow-blue-200",
};

const directions = {
    left: "bg-gradient-to-r",
    right: "bg-gradient-to-l",
}
---


<div
  {...rest}
  class:list={[
    "relative p-8 rounded-2xl shadow border border-blue shadow-sm flex-col justify-start items-start inline-block h-fit",
    styles[color],
    directions[direction],
    className,
  ]}
  >
    <p class="text-white text-lg">
        {content}
    </p>
    <div class="flex gap-4 mt-8">
        <img class="rounded-full w-14 h-14" src={profileImg} alt={name + " " + title}>
        <div class="text-white ">
            <p class="text-lg font-medium">{name}</p>
            <p class="text-sm font-medium">{title}</p>
        </div>
    </div>
  <slot />
  { buttonText && <Button class="absolute right-8 -bottom-6" style="primary" color="dark">{buttonText}</Button> }
</div>