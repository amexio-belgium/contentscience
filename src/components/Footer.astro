---
import { Image } from 'astro:assets';
import Button from './ui/Button.astro';
import Link from './ui/Link.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import FooterLink from './FooterLink.astro'
import Newsletter from './Newsletter.astro'
import facebook from "../assets/icons/facebook.svg"
import youtube from "../assets/icons/youtube.svg"
import twitter from "../assets/icons/twitter.svg"
import linkedin from "../assets/icons/linkedin.svg"
import iconBlue from "../assets/logos/icon_blue.svg"
import logoWhite from "../assets/logos/Amexio_White.svg"
import LanguageMenu from './LanguageMenu';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);


---

<footer class="inline-flex flex-col items-start justify-start w-full">
    <div class="relative flex flex-col items-start justify-start w-full">
      <div class="absolute inset-0 h-full -z-10">
        <div class="w-full bg-secondary h-[354px] overflow-hidden relative">
          <div class="absolute inset-0 w-full h-full footer-gradient-orange"></div>
        </div>
        <div class="w-full bg-primary h-[300px] overflow-hidden relative">
          <div class="absolute inset-0 w-full h-full footer-gradient-blue"></div>
        </div>
        
      </div>
      <div class="max-w-[1304px] h-[354px] w-screen mx-auto px-8 py-20 justify-start items-center gap-[90px] inline-flex">
        <div class="inline-flex flex-col items-start justify-start w-1/2 gap-2">
            <h2 class="text-6xl font-bold text-white">
                Let’s talk
            </h2>
            <p class="text-3xl font-normal text-white">
                Do you have a specific content<br> challenge you want to discuss?
            </p>
        </div>
        <div class="p-8 bg-sky-950 rounded-[50px] justify-start items-center gap-4 flex">
          <Button size="lg" icon color="light">Get in touch</Button>
        </div>
      </div>
      <div class="max-w-[1304px] h-[300px] w-screen mx-auto px-8 gap-20 justify-start items-center inline-flex">
        <div class="flex items-start justify-start w-1/2 gap-20 py-10">
          <div class="inline-flex flex-col items-start justify-start w-1/3 gap-8">
            <FooterLink href={`/${lang}/services`}>{t('nav.services')}</FooterLink>
            <FooterLink href={`/${lang}/cases/`}>{t('nav.cases')}</FooterLink>
          </div>
          <div class="inline-flex flex-col items-start justify-start w-1/3 gap-8">
            <FooterLink href={`/${lang}/blog/`}>{t('nav.blog')}</FooterLink>
            <FooterLink href={`/${lang}/about/`}>{t('nav.about')}</FooterLink>
          </div>
          <div class="inline-flex flex-col items-start justify-start w-1/3 gap-8">
            <FooterLink href={`/${lang}/contact/`}>{t('nav.contact')}</FooterLink>
            <div class="inline-flex items-center justify-start h-6 gap-2">
              <Link href="" rel="noopener">
                <Image loading="lazy" class="w-6 h-6" src={facebook} alt="facebook" />
              </Link>
              <Link href="" rel="noopener">
                <Image loading="lazy" class="w-6 h-6" src={twitter} alt="X (Twitter)" />
              </a>
              <Link href="" rel="noopener">
                <Image loading="lazy" class="w-6 h-6" src={linkedin} alt="LinkedIn" />
              </Link>
              <Link href="" rel="noopener">
                <Image loading="lazy" class="w-6 h-6" src={youtube} alt="youtube" />
              </Link>
            </div>
          </div>
        </div>
        <Newsletter class="w-1/3"/>
      </div>
    </div>
    <div class="max-w-[1304px] w-screen mx-auto px-8 bg-sky-900 py-4 justify-between items-center inline-flex">
      <p class="inline-flex text-lg font-medium text-white">
        Copyright © 2024 - AmeXio Fuse is part of <Image loading="lazy" class="pl-2" width={114} height={24} src={logoWhite} alt="Amexio" />
      </p>
      <div class="relative flex items-center justify-end gap-8">
          <Link class="text-base font-medium text-white underline" href={`/${lang}/privacy/`}>Privacy policy</Link>
          <Link class="text-base font-medium text-white underline" href={`/${lang}/cookies/`}>Cookies</Link>
          <Image loading="lazy" class="w-6 h-6" src={iconBlue} alt="" />
          <LanguageMenu currentLang={lang} />
      </div>
    </div>
</footer>