---
import Button from "@components/ui/Button.astro"
import Base from '@layouts/Base.astro';
import { i18nParams } from '../../i18n/consts'

export function getStaticPaths() {
	return i18nParams;
}
---

<Base>
    <div class="flex flex-col items-center">
        <h2 class="mb-2 text-2xl text-white">Buttons</h2>
    <div class="flex flex-row items-center gap-2 p-4 bg-white">
        <Button class="inline-block mt-4" link="/" style="primary" color="light">Register</Button>
        <Button class="inline-block mt-4" link="/" icon="info" style="primary" color="light">Register</Button>
        <Button class="inline-block mt-4" link="/" iconOnly icon="info" style="primary" color="light"></Button>
    </div> 
    <div class="flex flex-row items-center gap-2 p-4 bg-white">
        <Button class="inline-block mt-4" link="/" style="secondary" color="light">Register</Button>
        <Button class="inline-block mt-4" link="/" icon="info" style="secondary" color="light">Register</Button>
        <Button class="inline-block mt-4" link="/" iconOnly icon="info" style="secondary" color="light"></Button>
    </div> 
    <div class="flex flex-row items-center gap-2">
        <Button class="inline-block mt-4" link="/" style="primary" color="dark">Register</Button>
        <Button class="inline-block mt-4" link="/" icon="info" style="primary"  color="dark">Register</Button>
        <Button class="inline-block mt-4" link="/" iconOnly icon="info" style="primary" color="dark"></Button>
    </div> 
    <div class="flex flex-row items-center gap-2">
        <Button class="inline-block mt-4" link="/" style="secondary" color="dark">Register</Button>
        <Button class="inline-block mt-4" link="/" icon="info" style="secondary" color="dark">Register</Button>
        <Button class="inline-block mt-4" link="/" iconOnly icon="info" style="secondary" color="dark"></Button>
    </div>
</Base>