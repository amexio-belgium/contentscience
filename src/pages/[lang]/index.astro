---
import { i18nParams } from '../../i18n/consts'
import { useTranslations } from '../../i18n/utils';
import { Image } from 'astro:assets';
import Base from '@layouts/Base.astro';
import HeroHeader from '@components/HeroHeader.astro';
import ProjectOverview from '@components/ProjectOverview.astro'
import InsightsTeaser from '@components/InsightsTeaser.astro';
import Quote from '@components/Quote.astro';
import Highlight from '@components/Highlight.astro';
import Button from '@components/ui/Button.astro';
import painPoint from '@assets/icons/painpoint.svg';
import strategize from '@assets/icons/strategize.svg';
import design from '@assets/icons/design.svg';
import realize from '@assets/icons/realize.svg';
import optimize from '@assets/icons/optimize.svg';

export function getStaticPaths() {
	return i18nParams;
}

const { lang } = Astro.params;
const t = useTranslations(lang, 'home');
---
<Base>
  <HeroHeader 
      headline={t('hero.headline')}
      text={t('hero.text')}
      buttonText={t('hero.button')}
      homepage
  />

  <ProjectOverview />

  <div class="relative inline-flex flex-col items-start justify-start gap-10 bg-cover my-60">
    <div class="absolute bg-[url('/background/slant_orange.svg')] -z-10 w-[250%] md:w-[1240px] h-[1000px] -right-3/4 sm:-right-full lg:-right-1/3 -bottom-20 md:-top-20 bg-contain bg-no-repeat"></div>
    <div class="flex flex-col items-start justify-start gap-6 md:w-9/12">
        <h2 class="font-serif text-2xl text-white text-balance">
          {t('painpoint.headline')}
        </h2>
        <p class="text-base font-medium max-w-[65ch] text-white">
          {t('painpoint.descriptionP1')}
        </p>
        <p class="text-base font-medium max-w-[65ch] text-white">
          {t('painpoint.descriptionP2')}
        </p>
    </div>
    <div class="inline-flex flex-col items-stretch justify-start gap-8 md:flex-row">
      <div class="inline-flex flex-col items-center justify-start w-full gap-8 px-12 py-6 border-blue-500 shadow backdrop-blur-lg md:w-1/3 bg-gradient-to-l from-blue-600/70 to-blue-800/70 shadow-blue-200 rounded-2xl border-1">
        <Image src={painPoint} alt="" width={80} height={80} class="w-20 h-20" />
        <div class="flex flex-col items-center justify-start gap-4">
          <div class="font-serif text-xl text-center text-white">
            {t('painpoint1.headline')}
          </div>
          <div class="text-base text-center text-white">
            {t('painpoint1.description')}
          </div>
        </div>
      </div>
      <div class="inline-flex flex-col items-center justify-start w-full gap-8 px-12 py-6 border-blue-500 shadow backdrop-blur-lg md:w-1/3 bg-gradient-to-l from-blue-600/70 to-blue-800/70 shadow-blue-200 rounded-2xl border-1">
        <Image src={painPoint} alt="" width={80} height={80} class="w-20 h-20" />
        <div class="flex flex-col items-center justify-start gap-4">
          <div class="font-serif text-xl text-center text-white">
            {t('painpoint2.headline')}
          </div>
          <div class="text-base text-center text-white">
            {t('painpoint2.description')}
          </div>
        </div>
      </div>
      <div class="inline-flex flex-col items-center justify-start w-full gap-8 px-12 py-6 border-blue-500 shadow backdrop-blur-lg md:w-1/3 bg-gradient-to-l from-blue-600/70 to-blue-800/70 shadow-blue-200 rounded-2xl border-1">
        <Image src={painPoint} alt="" width={80} height={80} class="w-20 h-20" />
        <div class="flex flex-col items-center justify-start gap-4">
          <div class="font-serif text-xl text-center text-white">
            {t('painpoint3.headline')}
          </div>
          <div class="text-base text-center text-white">
            {t('painpoint3.description')}
          </div>        
        </div>
      </div>
    </div>
  </div>
  
  <div class="relative flex flex-col py-20 mb-60 pl-12 before:bg-light-blue-50 before:-z-10 before:absolute before:top-0 before:bottom-0 before:left-0 marker:before:h-full before:w-[3000px] before:rounded-xl">
    <div class="flex flex-col items-start justify-between w-full gap-4 mb-8 md:mb-4 md:items-center md:flex-row">
      <h2 class="font-serif text-2xl">
        {t('services.headline')}
      </h2>
      <Button link="/services" color="light">{t('services.button')}</Button>
    </div>
    <div class="flex flex-col items-start w-full gap-8 mb-12 md:w-9/12 h-fit">
      <p class="text-base text-black">
        {t('services.descriptionP1')}
      </p>
      <p class="text-base text-black">
        {t('services.descriptionP2')}

      </p>
    </div>
    <div class="flex flex-row flex-wrap justify-between w-full gap-8 lg:flex-row lg:flex-nowrap">
      <div class="inline-flex flex-col items-center justify-start w-full gap-8 md:w-5/12 lg:w-full">
        <Image src={strategize} alt="" width={80} height={80} class="w-20 h-20" />
        <div class="flex flex-col items-center justify-start gap-4">
          <div class="font-serif text-xl text-center "> 
            {t('services1.headline')}
          </div>
          <div class="text-base text-center">
            {t('services1.description')}
          </div>
        </div>
      </div>
      <div class="inline-flex flex-col items-center justify-start w-full gap-8 md:w-5/12 lg:w-full">
        <Image src={design} alt="" width={80} height={80} class="w-20 h-20" />
        <div class="flex flex-col items-center justify-start gap-4">
          <div class="font-serif text-xl text-center "> 
            {t('services2.headline')}
          </div>
          <div class="text-base text-center">
            {t('services2.description')}
          </div>
        </div>
      </div>
      <div class="inline-flex flex-col items-center justify-start w-full gap-8 md:w-5/12 lg:w-full">
        <Image src={realize} alt="" width={80} height={80} class="w-20 h-20" />
        <div class="flex flex-col items-center justify-start gap-4">
          <div class="font-serif text-xl text-center "> 
            {t('services3.headline')}
          </div>
          <div class="text-base text-center">
            {t('services3.description')}
          </div>
        </div>
      </div>
      <div class="inline-flex flex-col items-center justify-start w-full gap-8 md:w-5/12 lg:w-full">
        <Image src={optimize} alt="" width={80} height={80} class="w-20 h-20" />
        <div class="flex flex-col items-center justify-start gap-4">
          <div class="font-serif text-xl text-center "> 
            {t('services4.headline')}
          </div>
          <div class="text-base text-center">
            {t('services4.description')}
          </div>
        </div>
      </div>
    </div>
  </div>

  <Quote 
    quote={t('quote.text')}
    name='Johan Condijts'
    jobtitle={t('quote.title')}
    profileImage='/src/assets/people/placeholder_small.png'
    />

  <InsightsTeaser />

  <Highlight 
    title={t('highlight.headline')}
    text={t('highlight.text')}
    image='/src/assets/images/highlight.png'
    buttonText={t('highlight.button')}
    />

  <Highlight 
    title={t('highlight.headline')}
    text={t('highlight.text')}
    image='/src/assets/images/highlight.png'
    buttonText={t('highlight.button')}
    style='lightblue'
    />
</Base>