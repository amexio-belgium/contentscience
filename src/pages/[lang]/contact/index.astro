		headline={t('hero.headline')}
		text={t('hero.subheadline')}
	/>

	<div class="p-16 bg-white rounded-xl"> 
		<script charset="utf-8" type="text/javascript" src="https://js-eu1.hsforms.net/forms/embed/v2.js" is:inline></script>
		<script is:inline define:vars={{lang}}> 
		let formId =  "0bbb8a62-0b4c-42f5-820a-f7efe483b6e7"
		lang == "fr" && (formId = "e0b390be-6491-40c2-9045-33ef9ed28f96")
		lang == "nl" && (formId =  "71312006-dc15-4ec1-9b49-64c2babbd2f7")

			try {
				hbspt.forms.create({
					region: "eu1",
					portalId: "143190687",
					formId
				});
			} catch (error) {
				setTimeout(() => {
					hbspt.forms.create({
						region: "eu1",
						portalId: "143190687",
						formId
					});
				}, 2000);
			}
		</script>
	</div>

	<Prose>
		<h3>test </h3>
		<p>dhqsdhiqsihd qisddhqsdhiq sihdqisddhqsdhiqs ihdqisddhqsdhiqsihdqisd </p>
		<ul>
			<li>test1</li>
			<li>test1</li>
			<li>test1</li>
		</ul>
	</Prose>

	<TilesContainer 
		orangeSlant
		headline="Our offices">
		<SmallTile 
			headline="Leuven"
			description="Gaston Geenslaan 20 <br> 3001 heverlee <br> 18319919199391" >
		</SmallTile>
		<SmallTile 
			headline="Eindhoven"
			description="natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus." >
		</SmallTile>
	</TilesContainer>

	<Highlight 
		title={t('highlight.headline')}
		text={t('highlight.text')}
		image='/src/assets/images/highlight.png'
		buttonText={t('highlight.button')}
		style='lightblue'
    />
</Base>
