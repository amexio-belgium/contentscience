---
import Base from '../layouts/Base.astro';
import { i18nParams } from '../i18n/consts'
import { useTranslations } from '../i18n/utils';
import Button from '../components/ui/Button.astro';

export function getStaticPaths() {
	return i18nParams;
}
import { getLangFromUrl } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);

const t = useTranslations(lang);
console.log(lang)
---
<Base>
    <section class="">
        <div class="py-20 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
            <div class="mx-auto max-w-screen-sm text-center">
                <h1 class="mb-4 text-8xl tracking-tight font-extrabold lg:text-9xl text-tertiary ">404</h1>
                <p class="mb-4 text-3xl font-bold text-white md:text-4xl">
                    {t('404.headline')}
                </p>
                <p class="mb-4 text-lg font-light text-white">
                    {t('404.text')}
                </p>
                <Button class="mt-4 inline-block" link="/" style="primary" size='lg' color="dark">{t('404.button')}</Button>
            </div>   
        </div>
    </section>
</Base>